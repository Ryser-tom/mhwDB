<?xml version='1.0' encoding='utf-8'?>
<widget id="net.tomryser.mhwdb" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>MHW dataBase</name>
    <description>
        Monster hunter world database is an app to help player searching for items in the games.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
        <icon density="ldpi" src="res/icons/android/Icon-36.png" />
        <icon density="ldpi" src="res/icons/android/Icon-48.png" />
        <icon density="ldpi" src="res/icons/android/Icon-72.png" />
        <icon density="ldpi" src="res/icons/android/Icon-96.png" />
        <icon density="ldpi" src="res/icons/android/Icon-144.png" />
        <icon density="ldpi" src="res/icons/android/Icon-192.png" />
        <splash src="res/splash/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/splash/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/splash/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/splash/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="res/splash/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="res/splash/android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/icons/ios/Icon-29.png" height="29" width="29" />
        <icon src="res/icons/ios/Icon-40.png" height="40" width="40" />
        <icon src="res/icons/ios/Icon-50.png" height="50" width="50" />
        <icon src="res/icons/ios/Icon-57.png" height="57" width="57" />
        <icon src="res/icons/ios/Icon-58.png" height="58" width="58" />
        <icon src="res/icons/ios/Icon-60.png" height="60" width="60" />
        <icon src="res/icons/ios/Icon-72.png" height="72" width="72" />
        <icon src="res/icons/ios/Icon-76.png" height="76" width="76" />
        <icon src="res/icons/ios/Icon-80.png" height="80" width="80" />
        <icon src="res/icons/ios/Icon-100.png" height="100" width="100" />
        <icon src="res/icons/ios/Icon-114.png" height="114" width="114" />
        <icon src="res/icons/ios/Icon-120.png" height="120" width="120" />
        <icon src="res/icons/ios/Icon-144.png" height="144" width="144" />
        <icon src="res/icons/ios/Icon-152.png" height="152" width="152" />
        <icon src="res/icons/ios/Icon-167.png" height="167" width="167" />
        <icon src="res/icons/ios/Icon-172.png" height="172" width="172" />
        <icon src="res/icons/ios/Icon-180.png" height="180" width="180" />
    </platform>
</widget>